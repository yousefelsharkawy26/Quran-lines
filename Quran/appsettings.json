// Configuration/appsettings.json
{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "QuranLinesService": "Debug"
    }
  },
  "AllowedHosts": "*",
  "QuranApi": {
    "BaseUrl": "https://api.alquran.cloud/v1/",
    "Timeout": 30,
    "RetryCount": 3
  },
  "Segmentation": {
    "MaxSegmentsPerLine": 5,
    "MaxWordsPerArabicSegment": 8,
    "MaxWordsPerEnglishSegment": 12
  },
  "Cors": {
    "AllowedOrigins": [ "*" ],
    "AllowedMethods": [ "GET", "POST" ],
    "AllowedHeaders": [ "*" ]
  }
}
